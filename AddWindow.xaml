<mui:ModernWindow x:Class="Auto_Runer.AddWindow" 
                  Closing="AddWindow_OnClosing"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d" d:DesignWidth="300"
                  Height="253.333" Width="300"
                  Title="Добавление задачи"
                  Style="{StaticResource BlankWindow}">




    <Grid ShowGridLines="True" x:Name="GridMain">
        <Grid.RowDefinitions>
            <RowDefinition   Height="30*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
        </Grid.RowDefinitions>

        <Button x:Name="BtnNext"  Grid.Column="0"  Click="btn_next_Click" Margin="0,0,107,17" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="80" >
            <Label >Далее</Label>
        </Button>
        <Button x:Name="BtnCancel" Click="btn_cancel_Click" Margin="0,0,10,17" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Width="82" >
            <Label >Отмена</Label>
        </Button>


    </Grid>


</mui:ModernWindow>
